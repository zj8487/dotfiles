# get dir for this script
SOURCE="${BASH_SOURCE[0]}"
THIS="$( dirname "$SOURCE" )"
while [ -h "$SOURCE" ]
do
    SOURCE="$(readlink "$SOURCE")"
    [[ $SOURCE != /* ]] && SOURCE="$THIS/$SOURCE"
    THIS="$( cd -P "$( dirname "$SOURCE"  )" && pwd )"
    done
THIS="$( cd -P "$( dirname "$SOURCE" )" && pwd )"

NUMBER_OF_PROCESSORS=`cat /proc/cpuinfo | grep processor | wc -l`

source $THIS/alias.bash
source $THIS/colors.bash
source $THIS/git-completion.bash
source $THIS/prompt.bash
source $THIS/npm-completion.bash
source $THIS/tools.bash

# only prepend to path if it's not in path
prepend_to_path() {
    if [[ ":$PATH:" != *":$1:"* ]]; then
        PATH=$1:$PATH
    fi
}

prepend_to_path ~/local/bin
prepend_to_path ~/dotfiles/bash
prepend_to_path ~/dotfiles/node

# prevent git from opening editor for merge commit message
export GIT_MERGE_AUTOEDIT=no

# enable bash completion in interactive shells
if [ -f /etc/bash_completion ] && ! shopt -oq posix; then
   . /etc/bash_completion
fi

