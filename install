#!/bin/bash
set -e

SCRIPT_DIR=$( cd "$( dirname "$0" )" && pwd )

# create ~/.bashrc as symbolic link to ./bash/bashrc
ln -fs $SCRIPT_DIR/bash/bashrc ~/.bashrc

# create ~/.gitconfig as symbolic link to ./git/gitconfig
ln -fs $SCRIPT_DIR/git/gitconfig ~/.gitconfig

# create ~/.emacs as symbolic link to ./emacs/emacs
ln -fs $SCRIPT_DIR/emacs/emacs ~/.emacs

# create ~/.ssh/config as symbolic link to ./ssh/config
ln -fs $SCRIPT_DIR/ssh/config ~/.ssh/config

# make symbolic link in /usr/bin to custom emacs startup script
sudo ln -fs $SCRIPT_DIR/bash/e /usr/bin/e

# install dependencies and programs needed for the development environment
sudo apt-get install --assume-yes build-essential
sudo apt-get install --assume-yes imagemagick

sudo apt-get install --assume-yes rubygems
sudo gem install jekyll

# add in bundles from bundle.txt
#mkdir -p ~/.vim/bundle
#bundles=$(cat ./bundles.txt)
#cd ~/.vim/bundle
#for repo in $bundles; do
#    git clone $repo
#done
